{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Gignaati GW Installer",
  "version": "1.0.0",
  "identifier": "com.gignaati.gwinstaller",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420/",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"
    },
    "windows": [
      {
        "title": "Gignaati Workbench Installer",
        "width": 900,
        "height": 640,
        "center": true,
        "resizable": false,
        "minimizable": true,
        "maximizable": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi", "dmg", "app", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  }
}
